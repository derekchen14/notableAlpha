<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object  %>

  <%= f.label :username %>
  <%= f.text_field :username %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirm Password" %>
  <%= f.password_field :password_confirmation %>

  <% @btn_label = @user.username ? "Save changes" : "Create my account" %>
  <%= f.submit @btn_label, class: "btn btn-large btn-primary" %>

<% end %>